<section class="signup">

  <h1>Signup!</h1>

  <%= form_for :user, url: '/users' do |f| %>
    <table>
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tr>
          <td>
            Name: 
          </td>
          <td>
            <%= f.text_field :name %>
          </td>
        </tr>
        <tr>
          <td>
            Email:
          </td>
          <td>
            <%= f.text_field :email %>
          </td>
        </tr>
        <tr>
          <td>
            Password:
          </td>
          <td>
            <%= f.password_field :password %>
          </td>
        </tr>
        <tr>
          <td>
            Confirm Password:
          </td>
          <td>
            <%= f.password_field :password_confirmation %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.submit "Signup!", class: "btn btn-success"%>
          </td>
        </tr>
      </table>
    

  <% end %>

</section>