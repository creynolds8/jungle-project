<section class="login">
  <h1>Login!</h1>
  <div class="login-form">
    <%= form_tag "/login" do %>
      <table>
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tr>
          <td>
            Email: 
          </td>
          <td>
            <%= text_field_tag :email %>
          </td>
        </tr>
        <tr>
          <td>
            Password: 
          </td>
          <td>
            <%= text_field_tag :password %>
          </td>
        </tr>
        <tr>
          <td>
            <%= submit_tag "Login", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</section>